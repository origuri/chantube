doctype html 
html(lang="ko")
    head 
        title #{pageTitle} | Chantube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header 
            if fakeUser.loggedIn
                small Hello #{fakeUser.username}    
            nav 
                ul 
                    if !fakeUser.loggedIn
                        li 
                            a(href="/login") Login
                    else
                        li
                            a(href="/users/logout") Logout      

            h1=pageTitle
        main    
            block content
    include partials/footer.pug 